generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  clerkUserId String @unique
  email String @unique
  name String?
  imageUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model MedicalReport {
  id           String    @id @default(uuid())
  gender       String?
  location     String?
  dob          DateTime?  
  nationality  String?
  age          Int?
  admissionDt  DateTime?  
  doctor       String?    
  diseases     String?
  diagnosis    String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
}

model Passport {
  id                String    @id @default(uuid()) 
  passportNumber    String    
  passportType      String    
  countryCode       String     
  givenName         String     
  surName           String    
  nationality       String     
  sex               String    
  citizenshipNumber String?    
  dateOfBirth       DateTime  
  placeOfBirth      String    
  dateOfIssue       DateTime  
  dateOfExpiry      DateTime  
  issuingAuthority  String     
  createdAt         DateTime  @default(now())       
  updatedAt         DateTime  @updatedAt          
}
